@model com.fxm.MVCHibernate.Domain.CarLine

@{
    ViewBag.Title = "班车线路详情";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.jqprint.js")" type="text/javascript"></script>
<script type="text/javascript">
    function PrintPage() {
        $("#printDiv").jqprint();
    }
</script>
@using (Html.BeginForm())
{
    <table cellspacing="0" cellpadding="0" style="vertical-align: top; width: 100%; border: 0;">
        <tr>
            <td class="contentPageTitle" style=" text-align:center;vertical-align:middle">
                班车详细信息
            </td>
        </tr>
        <tr>
            <td class="titleContentDivider"></td>
        </tr>
        <tr>
            <td height="30">
                <input type="button" value="返回列表" class="btn6" onclick="window.location='/CarLine/Index?pageIndex=1'" />
                <input type="button" value="打印" class="btn3" onclick="PrintPage()" />
            </td>
        </tr>
        <tr>
            <td>
                <div id="printDiv">
                    <fieldset>
                        <legend>线路</legend>
                        <div class="display-label">班车</div>
                        <div class="display-field">@Html.DisplayFor(model => model.Car.Name)</div>
                        <div class="display-label">线路</div>
                        <div class="display-field">@Html.DisplayFor(model => model.Name)</div>
                        <div class="display-label">线路说明</div>
                        <div class="display-field">@Html.DisplayFor(model => model.Remark)</div>
                        <div class="display-label">发车时间</div>
                        <div class="display-field">@Html.DisplayFor(model => model.CarLineStartTime)</div>
                        <div class="display-label">班别</div>
                        <div class="display-field">
                            @if (Model.Shift == 1)
                            {
                                @: 早
                            }
                            else
                            {
                                @: 晚
                            }
                        </div>
                        <div class="display-label">周日</div>
                        <div class="display-field">
                            @if (Model.Sunday1 == 1)
                            {
                                @: 大休发车
                            }
                            @if (Model.Sunday2 == 1)
                            {
                                @: 小休发车
                            }
                            @if (Model.Sunday1 != 1&&Model.Sunday2 != 1)
                            {
                                @: 不发车
                            }
                        </div>
                        <div class="display-label">周一</div>
                        <div class="display-field">
                            
                            @if (Model.Monday1 != 1 && Model.Monday2 != 1)
                            {
                                @: 不发车
                            }
                            else
                            {
                                if (Model.Monday1 == 1)
                                {
                                    @: 大休发车
                                }
                                if(Model.Monday2 == 1)
                                {
                                    @: 小休发车
                                }    
                            }
                        </div>
                        <div class="display-label">周二</div>
                        <div class="display-field">
                           @if (Model.Tuesday1 != 1 && Model.Tuesday2 != 1)
                            {
                                @: 不发车
                            }
                            else
                            {
                                if (Model.Tuesday1 == 1)
                                {
                                    @: 大休发车
                                }
                                if (Model.Tuesday2 == 1)
                                {
                                    @: 小休发车
                                }
                            }
                            
                        </div>
                        <div class="display-label">周三</div>
                        <div class="display-field">
                            @if (Model.Wednesday1 != 1 && Model.Wednesday2 != 1)
                            {
                                @: 不发车
                            }
                            else
                            {
                                if (Model.Wednesday1 == 1)
                                {
                                    @: 大休发车
                                }
                                if (Model.Wednesday2 == 1)
                                {
                                    @: 小休发车
                                }    
                            }
                        </div>
                        <div class="display-label">周四</div>
                        <div class="display-field">
                            @if (Model.Thursday1 != 1 && Model.Thursday2 != 1)
                            {
                                @: 不发车
                            }
                            else
                            {
                                if (Model.Thursday1 == 1)
                                {
                                    @: 大休发车
                                }
                                if (Model.Thursday2 == 1)
                                {
                                    @: 小休发车
                                }
                            }
                        </div>
                        <div class="display-label">周五</div>
                        <div class="display-field">
                            @if (Model.Friday1 != 1 && Model.Friday2 != 1)
                            {
                                @: 不发车
                            }
                            else
                            {
                                if (Model.Friday1 == 1)
                                {
                                    @: 大休发车
                                }
                                if (Model.Friday2 == 1)
                                {
                                    @: 小休发车
                                }  
                            }
                        </div>
                        <div class="display-label">周六</div>
                        <div class="display-field">
                            @if (Model.Saturday1 != 1 && Model.Saturday2 != 1)
                            {
                                @: 不发车
                            }
                            else
                            {
                                if (Model.Saturday1 == 1)
                                {
                                    @: 大休发车
                                }
                                if (Model.Saturday2 == 1)
                                {
                                    @: 小休发车
                                } 
                            }
                        </div>
                        <div class="display-label">停靠站</div>
                        <div class="display-field">
                            <table border="1">
                                <tr>
                                    @foreach (var station in Model.CarLineStationList)
                                    {

                                        <td>@station.Name</td>
                                    }
                                </tr>   
                                <tr>
                                    @foreach (var station in Model.CarLineStationList)
                                    {

                                        <td>@station.ArrivalTime</td>
                                    }
                                </tr>
                            </table>
                        </div>
                    </fieldset>
                </div>
            </td>
        </tr>
    </table>
}