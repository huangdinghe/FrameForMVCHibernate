@model com.fxm.MVCHibernate.Domain.Car

@{
    ViewBag.Title = "修改班车";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.ID)
    @Html.ValidationSummary(true)
    <table cellspacing="0" cellpadding="0" style="vertical-align: top; width: 100%; border: 0;">
        <tr>
            <td class="contentPageTitle" style=" text-align:center;vertical-align:middle">
                编辑班车信息
            </td>
        </tr>
        <tr>
            <td class="titleContentDivider"></td>
        </tr>
        <tr>
            <td height="30">
                <input type="button" value="返回列表" class="btn6" onclick="window.location='/Car/Index?pageIndex=1'" />
                <input type="submit" value="保存" class="btn3" onclick="GetIDs()" />
            </td>
        </tr>
        <tr>
            <td>
                <fieldset>
                    <legend>班车信息</legend>
                    <div class="editor-label">
                        班车
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Name)
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                    <div class="editor-label">
                        车牌
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.PlateNumber)
                        @Html.ValidationMessageFor(model => model.PlateNumber)
                    </div>

                    <div class="editor-label">
                        座位数
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.SeatCount)
                        @Html.ValidationMessageFor(model => model.SeatCount)
                    </div>
                    <div class="editor-label">
                        司机
                    </div>
                    <div class="editor-field">
                        @Html.DropDownListFor(model => model.Driver.ID, ViewBag.driverItems as List<SelectListItem>)
                    </div>
                    <div class="editor-label">
                        状态
                    </div>
                    <div class="editor-field">
                        @Html.RadioButtonList("Status", ViewBag.statusItems as List<SelectListItem>)
                    </div>
                </fieldset>
            </td>
        </tr>
    </table>
}