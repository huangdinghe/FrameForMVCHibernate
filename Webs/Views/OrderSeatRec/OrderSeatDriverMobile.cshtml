@using MvcApp
@{
    ViewBag.Title = "我的行车任务";
    Layout = "~/Views/Shared/_LayoutMobile.cshtml";
    IList<OrderSeatRec> hisOrderSeatRec = ViewBag.hisOrderSeatRec as IList<OrderSeatRec>;
}
