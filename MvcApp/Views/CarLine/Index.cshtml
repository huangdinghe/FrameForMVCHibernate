@using MvcApp
@using com.fxm.MVCHibernate.Domain
@model PageList<com.fxm.MVCHibernate.Domain.CarLine>

@{
    ViewBag.Title = "班车线路列表";
}

@using (Html.BeginForm())
{
    <table cellspacing="0" cellpadding="0" style="vertical-align: top; width: 100%; border: 0;">
        <tr>
            <td class="contentPageTitle" style="text-align: center; vertical-align: middle">
                班车线路列表
            </td>
        </tr>
        <tr>
            <td class="titleContentDivider"></td>
        </tr>
        <tr>
            <td height="30">
                <input type="button" value="新增" class="btn3" onclick="window.location='/CarLine/Create'" />
            </td>
        </tr>
        <tr>
            <td>
                <table cellpadding="0" cellspacing="0" border="1" class="dataGrid">
                    <tr>
                        <th rowspan="2">
                            班车
                        </th>
                        <th rowspan="2">
                            线路
                        </th>
                        <th rowspan="2">
                            线路说明
                        </th>
                        <th rowspan="2">
                            发车时间
                        </th>
                        <th rowspan="2">
                            班别
                        </th>
                        <th colspan="7">
                            大休发车
                        </th>
                        <th colspan="7">
                            小休发车
                        </th>
                        <th rowspan="2">
                            操作
                        </th>
                    </tr>
                    <tr>
                        <th>
                            周日
                        </th>
                        <th>
                            周一
                        </th>
                        <th>
                            周二
                        </th>
                        <th>
                            周三
                        </th>
                        <th>
                            周四
                        </th>
                        <th>
                            周五
                        </th>
                        <th>
                            周六
                        </th>
                        <th>
                            周日
                        </th>
                        <th>
                            周一
                        </th>
                        <th>
                            周二
                        </th>
                        <th>
                            周三
                        </th>
                        <th>
                            周四
                        </th>
                        <th>
                            周五
                        </th>
                        <th>
                            周六
                        </th>
                    </tr>
                    @if (Model == null || Model.Count() == 0)
                    {
                        <tr>
                            <td colspan="20">
                                没有满足条件的数据！
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Car.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Remark)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CarLineStartTime)
                                </td>
                                <td>
                                    @if (item.Shift == 1)
                                    {
                                        @: <span>早</span>
                                    }
                                    else
                                    {
                                        @: <span>晚</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Sunday1 == 1)
                                    {
                                        @: <span>是</span>
                                    }
                                    else
                                    {
                                        @: <span>否</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Monday1 == 1)
                                    {
                                        @: <span>是</span>
                                    }
                                    else
                                    {
                                        @: <span>否</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Tuesday1 == 1)
                                    {
                                        @: <span>是</span>
                                    }
                                    else
                                    {
                                        @: <span>否</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Wednesday1 == 1)
                                    {
                                        @: <span>是</span>
                                    }
                                    else
                                    {
                                        @: <span>否</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Thursday1 == 1)
                                    {
                                        @: <span>是</span>
                                    }
                                    else
                                    {
                                        @: <span>否</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Friday1 == 1)
                                    {
                                        @: <span>是</span>
                                    }
                                    else
                                    {
                                        @: <span>否</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Saturday2 == 1)
                                    {
                                        @: <span>是</span>
                                    }
                                    else
                                    {
                                        @: <span>否</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Sunday2 == 1)
                                    {
                                        @: <span>是</span>
                                    }
                                    else
                                    {
                                        @: <span>否</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Monday2 == 1)
                                    {
                                        @: <span>是</span>
                                    }
                                    else
                                    {
                                        @: <span>否</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Tuesday2 == 1)
                                    {
                                        @: <span>是</span>
                                    }
                                    else
                                    {
                                        @: <span>否</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Wednesday2 == 1)
                                    {
                                        @: <span>是</span>
                                    }
                                    else
                                    {
                                        @: <span>否</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Thursday2 == 1)
                                    {
                                        @: <span>是</span>
                                    }
                                    else
                                    {
                                        @: <span>否</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Friday2 == 1)
                                    {
                                        @: <span>是</span>
                                    }
                                    else
                                    {
                                        @: <span>否</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Saturday2 == 1)
                                    {
                                        @: <span>是</span>
                                    }
                                    else
                                    {
                                        @: <span>否</span>
                                    }
                                </td>
                                <td>
                                    @Html.ActionLink("详细信息", "Details", new { id = item.ID })|
                                    @Html.ActionLink("修改", "Edit", new { id = item.ID }) |
                                    @Html.ActionLink("删除", "Delete", new { id = item.ID }, new { onclick = " return confirm('您确定要删除吗?'); " })
                                </td>
                            </tr>
                        }
                    }
                </table>
            </td>
        </tr>
        <tr>
            <td>
                <div class="pager">
                    @Html.Raw(Html.Pager(Model.PageIndex, Model.PageSize, Model.TotalCount, Model.PageIndex))
                </div>
            </td>
        </tr>
    </table>
}
