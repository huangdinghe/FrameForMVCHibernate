@using com.fxm.MVCHibernate.Domain
@model com.fxm.MVCHibernate.Domain.SysUser

@{
    ViewBag.Title = "用户详情";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.jqprint.js")" type="text/javascript"></script>
<script type="text/javascript">
    function PrintPage() {
        $("#printDiv").jqprint();
    }
</script>
@using (Html.BeginForm())
{
    <table cellspacing="0" cellpadding="0" style="vertical-align: top; width: 100%; border: 0;">
        <tr>
            <td class="contentPageTitle" style=" text-align:center;vertical-align:middle">
                用户详细信息
            </td>
        </tr>
        <tr>
            <td class="titleContentDivider"></td>
        </tr>
        <tr>
            <td height="30">
                <input type="button" value="返回列表" class="btn6" onclick="window.location='/SysUser/Index?pageIndex=1'" />
                <input type="button" value="打印" class="btn3" onclick="PrintPage()" />
            </td>
        </tr>
        <tr>
            <td>
                <div id="printDiv">
                    <fieldset>
                        <legend>用户</legend>
                        <div class="display-label">姓名</div>
                        <div class="display-field">@Html.DisplayFor(model => model.Name)</div>
                        <div class="display-label">登录账户</div>
                        <div class="display-field">@Html.DisplayFor(model => model.LoginCode)</div>
                        <div class="display-label">电话</div>
                        <div class="display-field">@Html.DisplayFor(model => model.Tel)</div>
                        <div class="display-label">状态</div>
                        <div class="display-field">
                            @if (Model.Status == 1)
                            {
                                @: 禁用
                            } else { 
                                @: 正常
                            }
                        </div>
                    </fieldset>
                    <fieldset>
                        <legend>所属角色</legend>
                        @Html.CheckBoxList("cblRole", (IEnumerable<SelectListItem>)ViewBag.cblItems, new { @disabled = "disabled" })
                    </fieldset>
                </div>
            </td>
        </tr>
    </table>
}